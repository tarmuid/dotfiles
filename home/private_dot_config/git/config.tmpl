[user]
  name = {{ .name }}
  email = {{ .email }}
{{- if eq .profile "home" }}
  signingkey = {{ .signing_key }}
{{- end }}

[color]
  ui = auto

[commit]
  gpgsign = true

# Default to personal/1Password signing
[include]
  path = ~/.config/git/config-personal

{{ if eq .profile "work" -}}
{{ include "private_dot_config/git/config-work.age" | decrypt -}}
{{- end }}