# vim:fileencoding=utf-8:foldmethod=marker

#  Fonts
# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMono Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
font_size 12.0

#  Cursor
cursor_blink_interval 0


#  Scrollback
scrollback_lines 100000

#  Mouse
mouse_hide_wait 3.0
copy_on_select clipboard

#  Terminal bell
enable_audio_bell no

#  Window layout
window_padding_width 4
confirm_os_window_close -1

#  Tab bar
tab_bar_style powerline
tab_powerline_style slanted

#  Color scheme
include dark-theme.auto.conf

#  Advanced
shell_integration enabled

{{ if eq .chezmoi.os "darwin" -}}
#  macOS specific
macos_option_as_alt left
macos_quit_when_last_window_closed yes

map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5
map cmd+6 goto_tab 6
map cmd+7 goto_tab 7
map cmd+8 goto_tab 8
map cmd+9 goto_tab 9
{{- end }}

#  Keyboard shortcuts

# Search scrollback
map kitty_mod+/ search_scrollback
map cmd+f       search_scrollback

# Edit config
map cmd+,       edit_config_file

# Clear terminal
map cmd+k       clear_terminal to_cursor active
map option+cmd+k clear_terminal scrollback active
map cmd+l       clear_terminal last_command active

{{ if eq .chezmoi.os "darwin" -}}
# macOS window management
map cmd+h       hide_macos_app
map opt+cmd+h   hide_macos_other_apps
map cmd+m       minimize_macos_window
map opt+cmd+s   toggle_macos_secure_keyboard_entry

# Cycle through OS windows
map cmd+`       macos_cycle_through_os_windows
map cmd+shift+` macos_cycle_through_os_windows_backwards

# Quit
map cmd+q       quit
{{- end }}


